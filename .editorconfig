# see: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
max_line_length = 80
end_of_line= lf

[*.{js,py}]
quote_type = single

[*.{json,html}]
quote_type = double

[*.{js,php,html,json}]
indent_style = tab
indent_size = 4

[*.{js,html,json}]
indent_style = space
indent_size = 4
curly_bracket_next_line = false
spaces_around_operators = true
indent_brace_style = K&R
continuation_indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4